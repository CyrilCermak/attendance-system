<!DOCTYPE html>
<html>
<head>
  <title>AuthAndAPI</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <!-- Bootstrap Core CSS -->
  <link href="../bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- MetisMenu CSS -->
  <link href="../bower_components/metisMenu/dist/metisMenu.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <link href="../dist/css/sb-admin-2.css" rel="stylesheet">
  <!-- Custom Fonts -->
  <link href="../bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
  <link href="../bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.css" rel="stylesheet">
  <!-- Custom CSS -->
  <link href="../dist/css/sb-admin-2.css" rel="stylesheet">
</head>
<body>

<div id="wrapper">
  <%= render partial: "layouts/nav" %>
  <div id="page-wrapper">
    <div class="container-fluid">
      <% flash.each do |key, value| %>
          <div class="alert alert-success" id="flash">
            <%= value %>
          </div>
      <% end %>

      <div class="row">
        <div id="col-lg-12">
          <%= simple_form_for TimeTable.new, url: admin_attendance_path, method: :post do |f| %>
              <%= f.association :worker, collection: Worker.all %>
              <%= f.button :submit, name: "Save", value: "Select worker", class: "btn btn-default" %>
          <% end %>
          <h3>Worker: <%= @worker %></h3>
        </div>
      </div>


      <div id="calendar">
        <script>
          (document).ready(function () {
            $('#calendar').fullCalendar({
              eventSources: [
                // your event source
                {
                  url: "/api/workers/<%= @worker.id%>/tables/",
                  type: 'GET',
                  color: 'red',
                  textColor: 'black'
                },
                {
                  url: "/api/workers/<%= @worker.id%>/holidays/",
                  type: 'GET',
                  color: 'yellow',
                  textColor: 'black'
                },
                {
                  error: function () {
                    alert('there was an error while fetching events!');
                  },
//            color: 'yellow',   // a non-ajax option
//            textColor: 'black' // a non-ajax option
                }

                // any other sources...

              ],
              header: {
                center: 'month,week,day' // buttons for switching between views
              },
              views: {
                week: {
                  type: 'agenda',
                  duration: {days: 7},
                  buttonText: 'Week'
                },
                day: {
                  type: 'agenda',
                  duration: {days: 1},
                  buttonText: 'Day'
                }
              },
              firstDay: 1
            })
          })
        </script>
      </div>


      <div class="row">
        <div class="col-lg-12">

        </div>
        <!-- /.col-lg-12 -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </div>
</div>

<div class="modal fade" id="showCalendar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h2 class="modal-title" id="myModalLabel">Calendar</h2>
      </div>
      <div class="modal-body">
        <div id="calendar">
          <script>
            $(document).ready(function () {
              $('#calendar').fullCalendar({
                eventSources: [
                  // your event source
                  {
                    url: "/api/workers/<%= @worker.id%>/tables/",
                    type: 'GET',
                    color: 'red',
                    textColor: 'black'
                  },
                  {
                    url: "/api/workers/<%= @worker.id%>/holidays/",
                    type: 'GET',
                    color: 'yellow',
                    textColor: 'black'
                  },
                  {
                    error: function () {
                      alert('there was an error while fetching events!');
                    },
//            color: 'yellow',   // a non-ajax option
//            textColor: 'black' // a non-ajax option
                  }

                  // any other sources...

                ],
                header: {
                  center: 'month,week,day' // buttons for switching between views
                },
                views: {
                  week: {
                    type: 'agenda',
                    duration: {days: 7},
                    buttonText: 'Week'
                  },
                  day: {
                    type: 'agenda',
                    duration: {days: 1},
                    buttonText: 'Day'
                  }
                },
                firstDay: 1
              })
            })
          </script>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>
<script src="/assets/flash-disappear.js"></script>
</body>
</html>
