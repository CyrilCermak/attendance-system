<div class="col-sm-12">
  <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info">
    <thead>
    <tr role="row">
      <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Worker: activate to sort column ascending" style="width: 104px;">Worker</th>
      <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Mobile phone: activate to sort column ascending" style="width: 118px;">Phone</th>
      <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Company phone: activate to sort column ascending" style="width: 118px;">Company phone</th>
      <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Email: activate to sort column ascending" style="width: 66px;">Email</th>
      <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Edit:" style="width: 66px;">Edit</th>
    </tr>
    </thead>
    <tbody>
    <% @workers.each do |worker| %>
        <tr class="Worker odd" role="row">
          <td class=""><%= worker.full_name %></td>
          <td class="sorting_1"><%= worker.phone %></td>
          <td class="sorting_1"><%= worker.company_phone%></td>
          <td class="sorting_1"><%= worker.email %></td>
          <td class=""><%= link_to "Edit", "#editWorker#{worker.id}", data: {toggle: :modal} %></td>
          <!--Edit Modal-->
          <div class="modal fade" id="editWorker<%= worker.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                  <h2 class="modal-title" id="myModalLabel"><%= worker.full_name %></h2>
                </div>
                <div class="modal-body">
                  <%= simple_form_for worker, url: admin_edit_worker_path(worker) do |f| %>
                      <%= f.input :first_name, placeholder: 'First name' %>
                      <%= f.input :last_name, placeholder: 'Last name' %>
                      <%= f.input :phone, placeholder: 'Phone' %>
                      <%= f.input :company_phone, placeholder: 'Company phone' %>
                      <%= f.input :email, placeholder: 'Email' %>
                      <%= f.button :submit, name: "Save", value: "Update Contact", class: "btn btn-default" %>
                  <% end %>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
              </div>
              <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
          </div>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

