<%= simple_form_for @holiday, url: admin_new_holiday_path do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :start %>
    <%= f.input :end %>
    <%= f.association :worker, collection: Worker.all%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>
