<!DOCTYPE html>
<html>
<head>
  <title>AuthAndAPI</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <div class="flash-notice">
    <% if !flash.empty? %>
        <% flash.each do |key, value| %>
            </div>
            <div class="alert alert-danger" id="flash-visible"> <%= value %></div>
        <% end %>
    <% else %>
        <div class="alert alert-danger" style="visibility: hidden">""</div>
    <% end %>
    <div>
      <div id="page-wrapper">
        <div class="container-fluid">
          <%= yield %>
          <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </div>
    </div>
</body>
</html>